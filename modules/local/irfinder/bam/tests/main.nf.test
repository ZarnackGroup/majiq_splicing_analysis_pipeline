// nf-core modules test irfinder/bam
nextflow_process {

    name "Test Process IRFINDER_BAM"
    script "../main.nf"
    process "IRFINDER_BAM"

    tag "modules"
    tag "modules_"
    tag "irfinder"
    tag "irfinder/bam"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("rnasplice - gtf/fasta") {

        setup {
            run("GUNZIP") {
                script "../../../../nf-core/gunzip/main.nf"  // Path to the gunzip module
                process {
                    """
                    input[0] = channel.of(
                    [
                        [ id: 'test' ],
                        file(params.pipelines_testdata_base_path + 'rnasplice/reference/X.fa.gz', checkIfExists: true)
                    ]
                    )
                    """
                }
            }
            run("IRFINDER_BUILDREFPROCESS") {
                script "../../buildrefprocess/main.nf"  // Path to the irfinder/buildrefprocess module
                process {
                    """
                    input[0] = channel.of(
                        [
                            [ id: 'test' ],
                            file(params.pipelines_testdata_base_path + 'rnasplice/reference/genes_chrX.gtf', checkIfExists: true)
                        ]
                    )

                    input[1] = GUNZIP.out.gunzip.map{ meta, file -> file }  // Use the unzipped file from setup

                    """
                }
            }
        }
        when {
            process {
                """
                input[0] = channel.of([
                    [ id:'ERR188383' ],
                    file(params.pipelines_testdata_base_path + '/rnasplice/testdata/ERR188383.Aligned.out.bam', checkIfExists: true),
                ])
                input[1] = IRFINDER_BUILDREFPROCESS.out.ir_finder_reference.map{ meta, file -> file }  // Use the reference from setup
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }


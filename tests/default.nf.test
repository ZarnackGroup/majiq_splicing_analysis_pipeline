nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"

    test("-profile test") {
        tag "irfinder" // will be excluded on GitHub CI - IRFinder BuildRefProcess quits with lower then 32G system memory :(

        when {
            params {
                outdir = "$outputDir"
            }
        }

        then {
            // stable_name: All files + folders in ${params.outdir}/ with a stable name
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            // stable_path: All files in ${params.outdir}/ with stable content
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    // pipeline versions.yml file for multiqc from which Nextflow version is removed because we test pipelines on multiple Nextflow versions
                    removeNextflowVersion("$outputDir/pipeline_info/majiq_splicing_analysis_pipeline_software_mqc_versions.yml"),
                    // All stable path name, with a relative path
                    stable_name,
                    // All files with stable contents
                    stable_path
                ).match() }
            )
        }
    }

    test("Pipeline without IRFinder (GitHub actions friendly)") {
        tag "ci"
        when {
            params {
                outdir = "$outputDir"
                skip_irfinder = true
            }
        }
        then {
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    removeNextflowVersion("$outputDir/pipeline_info/majiq_splicing_analysis_pipeline_software_mqc_versions.yml"),
                    stable_name,
                    stable_path
                ).match() }
            )
        }
    }

        test("-profile test,stub") {
        tag "ci"
        tag "stub"

        options "-stub"

        when {
            params {
                outdir = "$outputDir"
            }
        }

        then {
            // For stub tests, only check file structure, not content
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    // Check versions file still exists in stub mode
                    removeNextflowVersion("$outputDir/pipeline_info/majiq_splicing_analysis_pipeline_software_mqc_versions.yml"),
                    // All stable path names with relative paths
                    stable_name
                ).match() }
            )
        }
    }
}
